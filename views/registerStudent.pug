extends layout

block content
  .main.container.row
    .col-md-6.col-md-offset-3
      h1.display-4.m-b-2 Sign Up
      
      // register form
      form(method='POST' action='/register/student')
        div.form-group(style='color: red;')
                label(for='errors') #{error}
        div.form-group
          label(for='name') Name:
          input#name.form-control(type='text', placeholder='Full Name' name='name')
        div.form-group
          label(for='studentID') College ID:
          input#email.form-control(type='text', placeholder='' name='studentID')
        div.form-group
          label(for='degree') Degree Pursuing:
          input#name.form-control(type='text', placeholder='B.Tech' name='degree')
        div.form-group
          label(for='branch') Branch:
          input#name.form-control(type='text', placeholder='Computer Science and Engineering' name='branch')
        div.form-group
          label(for='pw') Password:
          input#pw.form-control(type='password' name='password')
        div.form-group
          label(for='pw2') Confirm Password:
          input#pw2.form-control(type='password' name='confirmPassword')
        button.btn.btn-primary(type='submit') Sign up
