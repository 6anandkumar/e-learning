extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3(style='margin: 0;width:100%')
        h1.display-4.m-b-2
        div.w3-card.w3-hover-shadow(onclick='studentLogin()', style="margin:1em;width: 45%;position: relative;float: left")
            img(src="/images/studentsIcon.png", alt="",style="width:100%")
            div.w3-container.w3-center(style='padding:0;')
                .w3-block.w3-pale-red(style='padding:0.5em;font-size:16') Login as Student      
        div.w3-card.w3-hover-shadow(onclick='instructorLogin()', style="margin:1em;width: 45%;position: relative;float: left")
            img(src="/images/instructorIcon.jpg", alt="",style="width:100%")
            div.w3-container.w3-center(style='padding:0;')
                .w3-block.w3-pale-red(style='padding:0.5em;font-size:16') Login as Instructor
